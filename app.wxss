swiper {
  height: 400rpx;
}

.clear {
  clear: both;
}

.my-swiper image {
  width: 100%;
  height: 360rpx !important;
}

.top-img {
  height: 120rpx;
  margin-bottom: 50rpx;
}

.top-img image {
  width: 100%;
  height: 120rpx;
}

.btn1 {
  background: #ed7fae;
}

.btn2 {
  background: #6cc4c6;
}

.footer {
  text-align: center;
  position: fixed;
  width: 100%;
  bottom: 0;
  background: #fff;
}

.footer>image {
  width: 90%;
  display: inline-block;
  height: 15rpx;
}

.footer-tab {
  display: flex;
  width: 90%;
  margin: 15rpx auto 15rpx;
  height: 45rpx;
  padding-bottom: 15rpx;
}

.footer-tab>view {
  flex: 1;
  display: flex;
  text-align: center;
  width: 90%;
  height: 60rpx;
}

.footer-tab>view:last-child image {
  padding-left: 40rpx;
  border-left: 1px solid #9e9ea0;
}

.footer-tab>view:last-child .tab-left {
  margin-left: 40rpx;
}

.footer-tab>view .tab-left {
  background: #9e9ea0;
  border-radius: 10rpx;
  flex: 2;
  font-size: 26rpx;
  line-height: 40rpx;
  color: #fff;
  height: 40rpx;
  letter-spacing: 5rpx;
}

.footer-tab>view.active image {
  filter: none;
}

.footer-tab image {
  width: 85%;
  height: 35rpx;
  padding-left: 10rpx;
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
  filter: gray;
}

.introduce {
  position: fixed;
  width: 100%;
  bottom: 135rpx;
  display: inline-block;
  z-index: 1000;
  border-radius:5rpx;
  background: #fff;

}

.btn-img {
  width: 360rpx;
  height: 60rpx;
}
.img-upload {
  margin-top: 80rpx;
  overflow: hidden;
}

.img-upload .img-item, .img-upload .img-item image {
  width: 100rpx;
  height: 100rpx;
}

.img-upload .img-item {
  position: relative;
  display: inline-block;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.img-upload .img-item icon {
  position: absolute;
  right: -12rpx;
  top: -12rpx;
  border-radius: 50%;
  background: #fff;
}

.img-add {
  border: 1px solid #b5b5b5;
  padding: 10rpx 0;
  background: #f7f7f7;
  border-radius: 15rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  font-size: 30rpx;
  padding-left: 30rpx;
  position: relative;
}

.img-add .icon {
  position: absolute;
  height: 80rpx;
  right: 0;
  top: 0;
  width: 65rpx;
  background: #9e9ea0;
  text-align: center;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.img-add .icon text {
  color: #fff;
  font-size: 50rpx;
  height: 100%;
  display: inline-block;
  line-height: 70rpx;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 9999;
  background: #f9f9f9;
-webkit-transform:translate(-50%, -50%);
transform:translate(-50%, -50%);
  max-height: 80%;
  border-radius: 15rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}



.modal-footer {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
  position: absolute;
  background: #fff;
  bottom:0;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #7db8bc;
  text-align: center;
}
.modal-dialog .wx-dialog-content{
  padding-bottom:90rpx; 
  max-height: 620rpx;
}
.wx-dialog-content {
  padding: 15px 15px 15px;
  min-height: 40px;
  word-wrap: break-word;
  word-break: break-all;
  color: #999;
  max-height: 920rpx;
  overflow-y: scroll;
  text-align: left;
  line-height: 50rpx;
  font-size: 30rpx;
}
.s_msg{
  width: 80%;
  margin: 0 auto;
  font-size: 28rpx;
  color:#b5b5b5;
}