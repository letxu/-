/* pages/query/query.wxss */
.sort-tab{
  width: 90%;
  display: flex;
  margin: 80rpx auto;
}
.sort-tab text{
  font-size: 30rpx;
  flex: 1;
  text-align: center;
  color: #999;
  border-right: 1px solid #999;
}
.sort-tab text:first-child{
 border-left: 1px solid #999;
}
.sort-tab text.active{
  color: #6cc4c6;
}
.queryDate{
  width: 90%;
  margin: 50rpx auto 0;
}
.queryDate image{
  width: 32rpx;
  height: 32rpx;
  margin: 0 20rpx;
}
.queryDate .queryBox{
  margin-top: 30rpx;
  width: 90%;
  display: inline-block;
  padding: 5%;
  background: #f7f7f7;
  border-radius: 15rpx;
  font-size: 30rpx;
  color: #999;
  border: 1px solid #b5b5b5;
  line-height: 40rpx;
}
.queryDate .queryBox view:first-child{
  margin-top: 0rpx;
}
.timer{
  color: #999
}
.queryDate .queryBox view{
  margin-top: 20rpx;
}
.moneyBox view{
  display: flex;
  width: 90%;
  margin: 25rpx auto 0;
  padding: 25rpx 5%;
  border-radius: 15rpx;
  background:#f7f7f7;
  font-size: 30rpx;
   border: 1px solid #b5b5b5;
   color: #b8b8b8;
}
.moneyBox .name{
  flex: 8

}
.moneyBox .num{
  flex: 2
}