.container {
  text-align: center;
}
page>view{
  padding-bottom: 100rpx;
}
.top-img{
  margin-bottom: 0
}
.btn-img{
  width: 330rpx;
  height: 55rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  min-width: 200rpx;
  padding: 0 15rpx;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 35rpx;
  color: #aaa;
  background: #f7f7f7;
  border: 1px solid #b5b5b5;
  border-radius: 15rpx;
  text-align: center;

}

.usermotto {
  display: inline-block;
  width: 90%;
  margin: 50rpx auto 0;
}

.usermotto .wrap-item:nth-child(2n-1) {
  margin-left: 0;
}

.usermotto .wrap-item {
  width: 48%;
  float: left;
  text-align: center;
  font-size: 30rpx;
  color: #b5b5b5;
  background: #f7f7f7;
  margin-left: 2%;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  border: 1px solid #b5b5b5;
  position: relative;
}
.usermotto .wrap-item.invited image{
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  width: 60rpx;
  height: 25rpx;
}
.usermotto .wrap-item.money{
  border: none
}
.usermotto .wrap-item:first-child image{
  display: none
}
.usermotto .wrap-item.money image{
    position:absolute;
    width:100%;
    height:100%;
    left:0;
    top:0;
    display: inline-block
}
.usermotto .wrap-item.money text{
  position: relative;
  color: #fff
}
.usermotto .wrap-item navigator {
  padding: 20rpx 0;
}

.service image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 15rpx
}

.service button{
  font-size: 30rpx;
  color: #b5b5b5;
  width:90%;
  background: #f7f7f7;
  border: 1px solid #b5b5b5;
  margin: 0 auto;
   border-radius: 15rpx;
   height: 80rpx;
   line-height: 80rpx;
}
.service navigator{
  padding: 20rpx 0;
  
}
.tel{
  margin-bottom: 30rpx;
}
.tel text{

  color: #999;
  font-size:25rpx;
  display: inline-block;
}
.btn1{
  margin-top: 80rpx;
}
.btn2{
  margin-bottom: 50rpx;
  letter-spacing: 7rpx;
}
button{
  width: 50%;
  margin: 20rpx auto 0;
  color: #fff;
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
}
