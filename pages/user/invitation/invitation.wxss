}

.view_img {
  text-align: center;
  margin-top: 0rpx;
  margin-bottom: 0;
}

.view_img .img {
  width: 440rpx;
  margin: 0 auto;
  height: 772rpx;
}

.search_no {
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
}

button {
  width: 40%;
  margin: 100rpx auto 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  letter-spacing: 5rpx;
}

.button-hover {
  color: #fff !important;
}

.instructions {
  width: 320rpx;
  margin: 0 auto;
  border-radius: 5rpx;
  color: #fff;
  margin-top: 50rpx;
