/**index.wxss**/

.wrap-item {
  width: 46%;
  height: 240rpx;
  margin: 1% 0 1% 1.5%;
  float: left;
  border-radius: 15rpx;

}

.index-tab .wrap-item:nth-child(2n-1) {
  margin-left: 3%;
}

.wrap-item navigator {
  display: inline-block;
  height: 100%;
  width: 100%;
}

.wrap-item image {
  display: block;
}

page>view {
  padding-bottom: 130rpx;
}

.tab-image {
  width: 100%;
  height: 75%;
}

.tab-image1 {
  width: 100%;
  height: 25%;
  position: relative;
}

.index-tab {
  padding-top: 5rpx;
}

.clear {
  clear: both;
}

.index-tab {
  width: 100%;
  display: inline-block;
}

.cn-font {
  padding-top: 15rpx;
  text-align: center;
}

.cn-font text {
  font-size: 26rpx;
  color: #999;
}

.en-font {
  text-align: center;
}

.en-font text {
  letter-spacing: 10rpx;
  color: #999;
  font-size: 22rpx;
}

.contact {
  color: #7db8bc;
  font-size: 26rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.contact view {
  display: inline-block;
  padding: 5rpx 25rpx;
  box-shadow: 0 0 20rpx #b5b5b5;
  border-radius: 15rpx;
}

.swiper-box .wx-swiper-dots {
  bottom: 0px;
}

